{
  "extends": "ts-node/node14/tsconfig.json",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "composite": false,
    "rootDir": "src",
    "noEmit": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
